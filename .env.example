# Databricks MCP Server - Environment Configuration Template
# 
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to Git!

# =============================================================================
# REQUIRED: Databricks Authentication
# =============================================================================

# Your Databricks workspace URL
# Example: https://your-workspace.cloud.databricks.com
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com

# Your Databricks Personal Access Token
# Get from: Workspace -> User Settings -> Developer -> Access Tokens -> Generate New Token
# Example: dapi1234567890abcdef1234567890abcdef
DATABRICKS_TOKEN=your_databricks_token_here


# =============================================================================
# OPTIONAL: M2M OAuth (for Databricks Apps deployment)
# =============================================================================

# Service Principal Application ID
# Only needed if using OAuth instead of PAT
# DATABRICKS_CLIENT_ID=your-service-principal-app-id

# OAuth Client Secret
# Only needed if using OAuth instead of PAT
# DATABRICKS_CLIENT_SECRET=your-oauth-secret


# =============================================================================
# OPTIONAL: Default Resources
# =============================================================================

# Default SQL Warehouse ID (for execute_query)
# Get from: SQL -> SQL Warehouses -> Click warehouse -> URL or ID
# DATABRICKS_WAREHOUSE_ID=your-warehouse-id

# Default Cluster ID (for notebook runs)
# Get from: Compute -> Click cluster -> Configuration -> Advanced -> Tags
# DATABRICKS_CLUSTER_ID=your-cluster-id


# =============================================================================
# OPTIONAL: Deployment Configuration
# =============================================================================

# App name for Databricks Apps deployment
# DATABRICKS_APP_NAME=databricks-mcp-server

# Databricks profile name (if using CLI with multiple profiles)
# DEFAULT profile is used if not specified
# DATABRICKS_PROFILE=DEFAULT
